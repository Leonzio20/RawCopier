<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.GridPane?>
<GridPane fx:id="pane" fx:controller="com.rawcopier.RawCopier" xmlns:fx="http://javafx.com/fxml" alignment="center"
          hgap="10"
          vgap="10">
  <Button text="Choose source folder" GridPane.columnIndex="0" GridPane.rowIndex="0" onAction="#chooseSource"/>
  <Label fx:id="sourceFolderLabel" text="--Source folder--" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
  <Button text="Choose target folder" GridPane.columnIndex="0" GridPane.rowIndex="1" onAction="#chooseTarget"/>
  <Label fx:id="targetFolderLabel" text="--Target folder--" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
  <Button text="Copy" GridPane.columnIndex="0" GridPane.rowIndex="2" onAction="#copy"/>
  <ProgressBar fx:id="progressBar" progress="0" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
</GridPane>